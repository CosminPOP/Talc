<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Script file="WinFrame.lua"/>

    <Frame name="TalcWonItemTemplate" virtual="true">
        <Size>
            <AbsDimension x="512" y="128"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER">
                <Offset>
                    <AbsDimension x="0" y="-200"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" inherits="GameFontNormal" text="">
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="208" y="-38"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentItemName" inherits="GameFontNormalLarge" justifyH="LEFT"
                            text="|cffa335eeChromatically Tempered Sword">
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="208" y="-55"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="160" y="35"/>
                    </Size>
                </FontString>
                <Texture name="$parentQualityBorder">
                    <Size>
                        <AbsDimension x="64" y="64"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="139" y="-30"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentIcon" inherits="UIPanelButtonTemplate">
                <NormalTexture name="$parentNormalTexture" file="Interface\Icons\inv_sword_51">
                    <Size>
                        <AbsDimension x="46" y="46"/>
                    </Size>
                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </NormalTexture>
                <PushedTexture inherits=""/>
                <DisabledTexture inherits=""/>
                <HighlightTexture inherits=""/>
                <Backdrop bgFile="Interface\Tooltips\U1I-Tooltip-Background" tile="true">
                </Backdrop>
                <Size>
                    <AbsDimension x="46" y="46"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT">
                        <Offset>
                            <AbsDimension x="148" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                </Scripts>
            </Button>
        </Frames>
    </Frame>

    <Frame name="TalcWinFrame" hidden="false" toplevel="true"
           parent="UIParent" movable="true" enableMouse="true">
        <Size>
            <AbsDimension x="250" y="20"/>
        </Size>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" inherits="GameFontNormal" text="[WIN] ANCHOR">
                    <Anchors>
                        <Anchor point="CENTER">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Anchors>
            <Anchor point="CENTER">
                <Offset>
                    <AbsDimension x="0" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Frames>
            <Button name="$parentTestPlacement" inherits="Talc_ButtonTemplate" text="Test">
                <Size>
                    <AbsDimension x="50" y="25"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT">
                        <Offset>
                            <AbsDimension x="0" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        Talc_TestWinFrame()
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentClosePlacement" inherits="Talc_ButtonTemplate" text="Close">
                <Size>
                    <AbsDimension x="50" y="25"/>
                </Size>
                <Anchors>
                    <Anchor point="RIGHT">
                        <Offset>
                            <AbsDimension x="0" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        Talc_WinFrameClosePlacement()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
                this:SetMovable(1);
                this:SetUserPlaced(true);
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
                this.isMoving = true;
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
                this.isMoving = false;
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>
