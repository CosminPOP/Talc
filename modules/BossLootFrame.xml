        <Size>
            <AbsDimension x="512" y="256"/>
        </Size>
        <Anchors>
            <Anchor point="TOP">
                <Offset>
                    <AbsDimension x="0" y="-285"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentTop" file="Interface\Addons\Talc\images\boss\bossloot">
                    <TexCoords left="0" right="1" top="0" bottom="0.15625"/>
                    <Size>
                        <AbsDimension x="512" y="80"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>

                <Texture name="$parentMiddle" file="Interface\Addons\Talc\images\boss\bossloot">
                    <TexCoords left="0" right="1" top="0.390625" bottom="0.51953125"/>
                    <Size>
                        <AbsDimension x="512" y="166"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOP" relativeTo="$parentTop" relativePoint="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="23"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>

                <Texture name="$parentBottom" file="Interface\Addons\Talc\images\boss\bossloot">
                    <TexCoords left="0" right="1" top="0.169015625" bottom="0.352265625"/>
